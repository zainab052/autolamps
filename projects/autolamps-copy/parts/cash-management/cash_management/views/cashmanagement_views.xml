    <record model = 'ir.ui.view' id = 'cash_management_bank_transfer_form'>
      <field name = 'name'>Bank And Cash Transfer</field>
      <field name = 'model'>cash.management.bank.transfer.header</field>
      <field name = 'arch' type = 'xml'>
        <form>
          <header>
            <button name="send_for_posting" type = "workflow" string = "Transfer"  confirm = "Transfer Funds?" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
            <field name = 'state' widget = 'statusbar'/>
          </header>
          <sheet>
            <div class="oe_right oe_button_box" name="buttons">
              
            </div>
            <group>
              <group string = 'Transfer From'>
                <field name = 'paying_bank'/>
                <field name = 'paying_account_no'/>
                <field name = 'paying_account_balance'/>
              </group>
              <group string = 'Transfer To'>
                <field name = 'receiving_bank'/>
                <field name = 'receiving_account_no'/>
                <field name = 'receiving_account_balance'/>

              </group>
              <group string = "Transfer Details">
                <field name = 'date'/>
                <field name = 'amount'/>
              </group>
              <group>
                <field name = 'remarks'/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model = 'ir.ui.view' id = 'cash_management_bank_transfers_tree_view'>
      <field name = 'name'>Bank And Cash Transfers</field>
